  --shadow-card: 0 4px 20px rgba(240, 91, 40, 0.08);
  --shadow-orange: 0 8px 30px rgba(240, 91, 40, 0.25);
  
  /* Transitions */
  --transition-fast: 0.15s ease;
  --transition-base: 0.3s ease;
  --transition-slow: 0.5s ease;
}

